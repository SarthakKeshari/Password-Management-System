<%- include('header') %>
      <div class="container">
        <div class="row">
          
          <div id="signupbox" style="margin-top: 50px;" class="mainbox co-md-6 cool-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="panel-title">Add New Password Category</div>
              </div>
              <div class="panel-body">
                <form action="/add-new-category" id="passwordform" class="form-horizontal" method="post" role="form">
                  
                  <div class="form-group">
                    <% if(errors != '') { %>
                      <p style="text-align: center;color: red;"><%= errors.passwordCategory.msg %></p>
                    <% } %>

                    <% if(success != '') { %>
                      <p style="text-align: center;color: green;"><%= success %></p>
                    <% } %>

                    <label for="name" class="col-md-3 control-label">Category Name</label> 
                    <div class="col-md-9">
                      <input type="text" class="form-control" name="passwordCategory" placeholder="Enter your Password Category Name">
                    </div>
                  </div>
                  <div class="form-group">
                     
                    <div class="col-md-offset-3 col-md-9">
                      <input type="submit" class="btn btn-primary" name="submit" value="Add Category" >
                    </div>
                  </div>
                  <p> <a href="/passwordCategory"> View All Category Lists</a></p>
                </form>
              </div>
            </div>
          </div>
        </div>
  
      </div>
      <%- include('footer') %>